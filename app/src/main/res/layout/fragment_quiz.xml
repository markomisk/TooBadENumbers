<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.giantturtle.badenumbersquiz.QuizActiviyWithFragment"
    android:background="@android:color/holo_orange_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:id="@+id/linear1">
        <TextView
            android:id="@+id/textPitanja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Question text "
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <RadioGroup
            android:id="@+id/radioGroupOdgovori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                tools:text="RadioButton" />
            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="RadioButton" />
            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="RadioButton" />
        </RadioGroup>
        <Button
            android:id="@+id/potvrdiOdgoovorButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm_answer" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Score: 56"
        android:id="@+id/fragmentScoreTextView"
        android:layout_below="@+id/linear1"/>
</RelativeLayout>
